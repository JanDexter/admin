# Production Environment Configuration
# Copy this to .env in production and update with actual values

# Application
APP_NAME="CO-Z Co-Workspace & Study Hub"
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE # Run: php artisan key:generate
APP_DEBUG=false # ⚠️ MUST BE FALSE IN PRODUCTION
APP_TIMEZONE=UTC
APP_URL=https://your-domain.com
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Admin Portal Security
ADMIN_LOGIN_PATH=coz-control-access  # Change this to custom path
ADMIN_AREA_PREFIX=coz-control        # Change this to custom path

# Logging
LOG_CHANNEL=stack
LOG_STACK=single,stderr
LOG_LEVEL=warning # Production should use 'warning' or 'error'
LOG_DEPRECATIONS_CHANNEL=null

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=coz_workspace
DB_USERNAME=coz_user
DB_PASSWORD=YOUR_SECURE_DB_PASSWORD_HERE # Use strong password!

# Session Security - CRITICAL FOR PRODUCTION
SESSION_DRIVER=database
SESSION_LIFETIME=120 # Consider 60 for admin users
SESSION_ENCRYPT=true # ⚠️ MUST BE TRUE
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=true # ⚠️ MUST BE TRUE (requires HTTPS)
SESSION_HTTP_ONLY=true # ⚠️ MUST BE TRUE
SESSION_SAME_SITE=lax # Options: lax, strict, none

# Cache
CACHE_DRIVER=redis
CACHE_PREFIX=coz_

# Queue
QUEUE_CONNECTION=redis

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE # Use strong password!
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# Broadcasting
BROADCAST_CONNECTION=log

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Password Security
BCRYPT_ROUNDS=12 # ⚠️ Minimum 12 for production

# Authentication
AUTH_PASSWORD_TIMEOUT=10800 # 3 hours

# Filesystem
FILESYSTEM_DISK=local

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

# Sanctum
SANCTUM_STATEFUL_DOMAINS=your-domain.com,www.your-domain.com

# Vite (Build Assets)
VITE_APP_NAME="${APP_NAME}"

# Security Headers (Handled by middleware)
# These are set programmatically in SecurityHeaders middleware

# Rate Limiting
# Public endpoints: 60 requests per minute (configured in routes)
# Login attempts: 5 per minute (configured in LoginRequest)

# Additional Security Settings
# APP_KEY rotation schedule: Every 90 days
# Password reset token expiry: 60 minutes
# Email verification throttle: 6 requests per minute
